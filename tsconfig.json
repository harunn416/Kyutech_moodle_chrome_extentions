{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "noEmit": true,
    "lib": ["es6", "dom"],
    "types": ["chrome"]
  },
  "include": [
    "content_scripts/**/*",
    "util/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
